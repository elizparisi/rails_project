<h1>All Recommendations</h1>

<div class="recos">
  <div class="container">
    <div class="row">
  <% @recommendations.each do |recommendation| %>
  <div class="col-sm-6">
  <div class ="solo" class="card" style="width: 18rem;">
    <img class="card-img-top" src="<%= recommendation.image_url %>" alt="<%= recommendation.name %>" height="200" width="200">
    <div class="card-body">
      <h5 class="card-title"><%= recommendation.name %></h5>
      <p class="card-text">Location: <%= recommendation.location %>
        Description: <%= recommendation.description %>
      </p>
      <%= link_to "Learn more and Comment", recommendation_path(recommendation) %>
      <br>
      <%= link_to "See Comments", recommendation_comments_path(recommendation) %>
    </div>
  </div>
  </div>

  <% end %>
    </div>
  </div>
</div>

