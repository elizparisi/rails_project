<h1>All Recommendations</h1>

<div class="recos">
  <% @recommendations.each do |recommendation| %>

    <p><img src="<%= recommendation.image_url %>" alt="<%= recommendation.name %>" height="200" width="200"><p>
    <br>
    <%= recommendation.name %>
    <%= recommendation.location %>
    <%= recommendation.description %>
    <br>
    <%= link_to "Learn more and Comment", recommendation_path(recommendation) %>
    <%= link_to "See Comments", recommendation_comments_path(recommendation) %>
    <br>
    <br>
    <br>

  <% end %>
</div>
